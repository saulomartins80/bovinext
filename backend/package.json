{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend da aplicação TheClosen",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/index.ts",
    "build": "rimraf dist && tsc",
    "build:no-lint": "rimraf dist && tsc",
    "build:production": "node scripts/setup-production.js && rimraf dist && tsc",
    "render:simulate": "npm run build && npm start",
    "render:simulate:no-lint": "npm run build:no-lint && npm start",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "cleanup-db": "cross-env NODE_ENV=development ts-node src/scripts/cleanupDatabase.ts",
    "fix-subscription": "cross-env NODE_ENV=development ts-node src/scripts/fixSubscription.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/nodemailer": "6.4.17",
    "@types/puppeteer": "5.4.7",
    "@types/stripe": "^8.0.416",
    "axios": "1.10.0",
    "bcrypt": "5.1.1",
    "bcryptjs": "^3.0.2",
    "bullmq": "5.56.1",
    "chalk": "^5.4.1",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "debug": "4.4.1",
    "dotenv": "^16.5.0",
    "dotenv-safe": "^9.1.0",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "firebase-admin": "^13.4.0",
    "helmet": "^8.1.0",
    "inversify": "^7.5.2",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongodb": "^6.17.0",
    "mongoose": "^8.15.0",
    "morgan": "^1.10.0",
    "node-cron": "^4.0.7",
    "nodemailer": "7.0.5",
    "openai": "^5.1.1",
    "os-utils": "^0.0.14",
    "puppeteer": "24.12.0",
    "puppeteer-extra": "3.3.6",
    "puppeteer-extra-plugin-stealth": "2.11.2",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "stripe": "^18.2.1",
    "ts-node": "^2.0.0",
    "tsyringe": "^4.10.0",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.25.20"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "3.0.0",
    "@types/compression": "^1.8.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/express-rate-limit": "6.0.2",
    "@types/helmet": "4.0.0",
    "@types/inversify": "2.0.33",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mongoose": "5.11.97",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.31",
    "@types/node-cron": "^3.0.11",
    "@types/reflect-metadata": "^0.0.5",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "15.5.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0"
  },
  "volta": {
    "node": "18.18.2",
    "npm": "9.8.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@routes/(.*)$": "<rootDir>/src/routes/$1",
      "^@controllers/(.*)$": "<rootDir>/src/controllers/$1",
      "^@models/(.*)$": "<rootDir>/src/models/$1",
      "^@config/(.*)$": "<rootDir>/src/config/$1",
      "^@services/(.*)$": "<rootDir>/src/services/$1",
      "^@interfaces/(.*)$": "<rootDir>/src/interfaces/$1",
      "^@utils/(.*)$": "<rootDir>/src/utils/$1",
      "^@middlewares/(.*)$": "<rootDir>/src/middlewares/$1",
      "^@validations/(.*)$": "<rootDir>/src/validations/$1"
    }
  },
  "_moduleAliases": {
    "@routes": "src/routes",
    "@controllers": "src/controllers",
    "@models": "src/models",
    "@config": "src/config",
    "@services": "src/services",
    "@interfaces": "src/interfaces",
    "@utils": "src/utils",
    "@middlewares": "src/middlewares",
    "@validations": "src/validations",
    "@core": "src/core",
    "@modules": "src/modules"
  }
}
